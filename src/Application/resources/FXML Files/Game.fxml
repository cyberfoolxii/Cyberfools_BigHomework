<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Application.java.GameController"
      styleClass="game-container">
    <Label text="English Vocabulary Quiz" styleClass="header-label" />
    <Label fx:id="wordLabel" styleClass="word-label" />
    <TextField fx:id="answerField" styleClass="answer-field" />
    <Button text="Check" onAction="#checkAnswer" styleClass="check-button" />
    <Label fx:id="resultLabel" styleClass="result-label" />
</VBox>