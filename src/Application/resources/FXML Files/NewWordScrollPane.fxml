<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fx:id="myScrollPane" hbarPolicy="NEVER" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Application.java.UpdateWordController">
   <content>
      <VBox prefHeight="463.0" prefWidth="538.0">
         <children>
            <TextArea fx:id="wordContent" maxWidth="1.7976931348623157E308" prefHeight="39.0" prefWidth="538.0" promptText="Nhập từ mới..." wrapText="true" />
            <TextArea fx:id="wordType" prefHeight="42.0" prefWidth="538.0" promptText="Nhập loại từ..." />
            <TextArea fx:id="wordPhonetic" prefHeight="38.0" prefWidth="538.0" promptText="Phiên âm..." />
            <HBox prefHeight="43.0" prefWidth="538.0">
               <children>
                  <VBox fx:id="vBox1" HBox.hgrow="ALWAYS">
                     <children>
                        <TextArea fx:id="wordMeaning" prefHeight="200.0" prefWidth="200.0" promptText="Dịch nghĩa..." />
                     </children>
                  </VBox>
                  <Button mnemonicParsing="false" onAction="#addMeaning" prefHeight="48.0" prefWidth="40.0" text="+" />
                  <Button mnemonicParsing="false" onAction="#reduceMeaning" prefHeight="48.0" prefWidth="40.0" text="-" />
               </children>
            </HBox>
            <HBox prefHeight="43.0" prefWidth="538.0">
               <children>
                  <VBox fx:id="vBox2" HBox.hgrow="ALWAYS">
                     <children>
                        <TextArea fx:id="wordDefinition" prefHeight="200.0" prefWidth="200.0" promptText="Định nghĩa..." />
                     </children>
                  </VBox>
                  <Button mnemonicParsing="false" onAction="#addDefinition" prefHeight="48.0" prefWidth="40.0" text="+" />
                  <Button mnemonicParsing="false" onAction="#reduceDefinition" prefHeight="48.0" prefWidth="40.0" text="-" />
               </children>
            </HBox>
            <HBox prefHeight="43.0" prefWidth="538.0">
               <children>
                  <VBox fx:id="vBox3" HBox.hgrow="ALWAYS">
                     <children>
                        <TextArea fx:id="wordSynonym" prefHeight="200.0" prefWidth="200.0" promptText="Từ đồng nghĩa..." VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <Button mnemonicParsing="false" onAction="#addSynonym" prefHeight="48.0" prefWidth="40.0" text="+" HBox.hgrow="NEVER" />
                  <Button mnemonicParsing="false" onAction="#reduceSynonym" prefHeight="48.0" prefWidth="40.0" text="-" />
               </children>
            </HBox>
            <HBox prefHeight="43.0" prefWidth="538.0">
               <children>
                  <VBox fx:id="vBox4" HBox.hgrow="ALWAYS">
                     <children>
                        <TextArea fx:id="wordAntonym" prefHeight="200.0" prefWidth="200.0" promptText="Từ trái nghĩa" />
                     </children>
                  </VBox>
                  <Button mnemonicParsing="false" onAction="#addAntonym" prefHeight="48.0" prefWidth="40.0" text="+" />
                  <Button mnemonicParsing="false" onAction="#reduceAntonym" prefHeight="48.0" prefWidth="40.0" text="-" />
               </children>
            </HBox>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#complete" prefHeight="34.0" prefWidth="538.0" text="Hoàn thành" />
            <Label fx:id="messageLabel" alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" prefHeight="46.0" prefWidth="538.0">
               <font>
                  <Font name="Corbel Italic" size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </content>
</ScrollPane>
